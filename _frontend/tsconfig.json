{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "exclude": ["node_modules", ".next", "out"],
  "include": [
    "./pages/",
    "./pages/**/*.ts",
    "./pages/**/*.tsx",
    "./src/",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "jest.config.js",
    "globals.d.ts"
  ],
}
